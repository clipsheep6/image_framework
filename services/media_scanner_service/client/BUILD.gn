import("//build/ohos.gni")
import("//build/test.gni")
import("//foundation/multimedia/media_library/multimedia_aafwk.gni")
MEDIA_LIB_BASE_DIR = "//foundation/multimedia/media_library"

config("media_data_ability_public_config") {
  include_dirs = [
    "//utils/native/base/include",
    "//utils/system/safwk/native/include",
    "${ability_runtime_inner_api_path}/ability_manager/include",
    "${ability_runtime_inner_api_path}/app_manager/include/appmgr",
    "${ability_runtime_services_path}/abilitymgr/include",
    "$MEDIA_LIB_BASE_DIR/interfaces/inner_api/media_library_helper/include",
    "$MEDIA_LIB_BASE_DIR/services/media_scanner_service/client/include",
    "$MEDIA_LIB_BASE_DIR/services/media_scanner_service/ipc/include",
  ]

  if (target_cpu == "arm") {
    cflags = [ "-DBINDER_IPC_32BIT" ]
  }
}

ohos_shared_library("media_scanner_client") {
  install_enable = true
  sources = [
    "../ipc/src/media_scanner_ability_proxy.cpp",
    "../ipc/src/media_scanner_operation_callback_stub.cpp",
    "src/media_scanner_client.cpp",
  ]

  public_configs = [ ":media_data_ability_public_config" ]

  deps = [
    "${ability_runtime_inner_api_path}/ability_manager:ability_manager",
    "${ability_runtime_kits_path}/ability/native:abilitykit_native",
    "${ability_runtime_services_path}/abilitymgr:abilityms",
    "//foundation/distributedschedule/safwk/interfaces/innerkits/safwk:system_ability_fwk",
    "//utils/native/base:utils",
  ]

  external_deps = [
    "ability_base:want",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "samgr_standard:samgr_proxy",
  ]

  subsystem_name = "multimedia"
  part_name = "media_library"
}
