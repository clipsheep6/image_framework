import("//build/test.gni")
import("//foundation/multimedia/media_library/media_library.gni")

group("unittest") {
  testonly = true

  deps = [ ":medialibrary_scanner_test" ]
}

ohos_unittest("medialibrary_scanner_test") {
  module_out_path = "media_library/medialibraryextention"
  include_dirs = [
    "./include",
    "../get_self_permissions/include",
    "${ABILITY_RUNTIME_PATH}/interfaces/kits/native",
    "${MEDIA_LIB_BASE_DIR}/frameworks/innerkitsimpl/medialibrary_data_extension/include/distributed_media_library/device_manage",
    "${MEDIA_LIB_BASE_DIR}/frameworks/innerkitsimpl/medialibrary_data_extension/include/distributed_media_library/database_manage",
    "${MEDIA_LIB_BASE_DIR}/frameworks/innerkitsimpl/medialibrary_data_extension/include/distributed_media_library/devices_info_interact",
    "${MEDIA_LIB_BASE_DIR}/interfaces/inner_api/media_library_helper/include",
    "${MEDIA_LIB_INNERKITS_DIR}/media_library_helper/include",
    "${MEDIA_LIB_COMMON_UTILS_DIR}/include",
    "${MEDIA_LIB_INNERKITS_DIR}/medialibrary_data_extension/include",
    "${MEDIA_LIB_SERVICES_DIR}/media_thumbnail/include",
    "${MEDIA_LIB_BASE_DIR}/frameworks/innerkitsimpl/medialibrary_data_extension/include",
    "../medialibrary_unittest_utils/include",
    "${MEDIA_LIB_INTERFACES_INNER_DIR}/media_library_helper/include",
    "${MEDIA_LIB_SERVICES_DIR}/media_file_extension/include",
  ]

  sources = [
    "../medialibrary_unittest_utils/src/medialibrary_unittest_utils.cpp",
    "./src/medialibrary_scanner_test.cpp",
  ]
  deps = [
    "${ABILITY_RUNTIME_INNER_API_PATH}/ability_manager:ability_manager",
    "${ABILITY_RUNTIME_INNER_API_PATH}/dataobs_manager:dataobs_manager",
    "${ABILITY_RUNTIME_INNER_API_PATH}/runtime:runtime",
    "${MEDIA_LIB_BASE_DIR}/frameworks/services/media_thumbnail:medialibrary_thumbnail",
    "${MEDIA_LIB_COMMON_UTILS_DIR}:permission_utils",
    "${MEDIA_LIB_INNERKITS_DIR}/media_library_helper:media_library",
    "${MEDIA_LIB_INNERKITS_DIR}/medialibrary_data_extension:medialibrary_data_extension",
  ]

  external_deps = [
    "ability_base:want",
    "ability_base:zuri",
    "ability_runtime:ability_context_native",
    "ability_runtime:app_context",
    "ability_runtime:runtime",
    "c_utils:utils",
    "common_event_service:cesfwk_innerkits",
    "data_share:datashare_common",
    "data_share:datashare_provider",
    "napi:ace_napi",
    "relational_store:native_rdb",
  ]

  if (is_standard_system) {
    external_deps += [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps += [ "hilog:libhilog" ]
  }

  resource_config_file =
      "${MEDIA_LIB_INNERKITS_DIR}/test/unittest/resources/ohos_test.xml"
}
