    "${MEDIA_LIB_BASE_DIR}/frameworks/innerkitsimpl/test/unittest/medialibrary_unittest_utils/include",
  ]

  sources = [
    "../medialibrary_unittest_utils/src/medialibrary_unittest_utils.cpp",
    "./src/medialibrary_scanner_db_test.cpp",
  ]
  deps = [
    "${ABILITY_RUNTIME_INNER_API_PATH}/ability_manager:ability_manager",
    "${ABILITY_RUNTIME_PATH}/frameworks/native/ability/native:abilitykit_native",
    "${MEDIA_LIB_INNERKITS_DIR}/medialibrary_data_extension:medialibrary_data_extension",
  ]

  external_deps = [
    "ability_base:zuri",
    "ability_runtime:ability_context_native",
    "ability_runtime:app_context",
    "c_utils:utils",
    "common_event_service:cesfwk_innerkits",
    "data_share:datashare_common",
    "data_share:datashare_provider",
    "device_manager:devicemanagersdk",
    "relational_store:native_rdb",
    "relational_store:rdb_data_share_adapter",
  ]

  resource_config_file =
