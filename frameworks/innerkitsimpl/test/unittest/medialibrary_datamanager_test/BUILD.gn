import("//build/test.gni")
import("//foundation/multimedia/media_library/media_library.gni")

group("unittest") {
  testonly = true

  deps = [ ":medialibrary_datamanager_unittest" ]
}

ohos_unittest("medialibrary_datamanager_unittest") {
  module_out_path = "media_library/media_library_datamanager"
  include_dirs = [
    "./include",
    "../get_self_permissions/include",
    "../medialibrary_unittest_utils/include",
    "${MEDIA_LIB_INTERFACES_INNER_DIR}/media_library_helper/include",

    #"${MEDIA_LIB_INNERKITS_DIR}/medialibrary_data_extension/include",
    "${MEDIA_LIB_SERVICES_DIR}/media_file_extension/include",
    "//foundation/filemanager/user_file_service/frameworks/innerkits/file_access/include/",
  ]

  sources = [
    "../get_self_permissions/src/get_self_permissions.cpp",
    "../medialibrary_unittest_utils/src/medialibrary_unittest_utils.cpp",
    "./src/medialibrary_datamanager_test.cpp",
  ]
  deps = [
    "${MEDIA_LIB_INNERKITS_DIR}/media_library_helper:media_library",
    "${MEDIA_LIB_INNERKITS_DIR}/medialibrary_data_extension:medialibrary_data_extension",
    "//foundation/filemanagement/user_file_service/frameworks/innerkits/file_access:file_access_extension_ability_kit",
  ]

  external_deps = [
    "ability_base:configuration",
    "ability_base:zuri",
    "ability_runtime:ability_context_native",
    "ability_runtime:ability_manager",
    "ability_runtime:abilitykit_native",
    "ability_runtime:app_context",
    "ability_runtime:runtime",
    "access_token:libaccesstoken_sdk",
    "access_token:libnativetoken",
    "access_token:libtoken_setproc",
    "c_utils:utils",
    "data_share:datashare_common",
    "data_share:datashare_provider",
    "multimedia_image_framework:image_native",
    "napi:ace_napi",
    "relational_store:native_rdb",
  ]

  if (is_standard_system) {
    external_deps += [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps += [ "hilog:libhilog" ]
  }

  resource_config_file =
      "${MEDIA_LIB_INNERKITS_DIR}/test/unittest/resources/ohos_test.xml"
}
